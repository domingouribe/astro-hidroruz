<style lang="scss">
	.menu {
    display: flex;
    background-color: transparent;
    border: none;
    flex-flow: column wrap;
    height: 2em;
    justify-content: space-between;
    padding: 0;
    cursor: pointer;
    position: fixed;
    top: 2.5em;
    right: 1em;
    z-index: 1;

    &__bar {
      height: 0.3em;
      width: 2em;
      background-color: var(--white);
      display: flex;
      gap: 0.5em;
      transition: all 0.3s ease;
    }
    &.change {
      span:nth-child(1) {
        transform: translateY(14px) rotate(45deg);
      }

      span:nth-child(2) {
        opacity: 0;
      }

      span:nth-child(3) {
        transform: translateY(-14px) rotate(-45deg);
      }
    }
  }

  .nav {
    display: flex;
    flex-flow: row wrap;
    gap: 1em;
    justify-content: space-between;
    height: 100vh;
    width: 100vw;
    overflow: hidden;
	transition: all 0.3s ease;
	opacity: 0;
    top: 0;
    position: fixed;
	pointer-events: none;

    &__link {
      color: var(--white);
      text-transform: uppercase;
      text-decoration: none;
    }

    &.nav-open {
      height: 100vh;
      width: 100vw;
      opacity: 1;
      padding: 1.5em;
      pointer-events: all;
      left: 0;
      top: 0;
      position: absolute;
      z-index: 0;
      background-color: red;
	  opacity: 1;
      display: flex;
      flex-flow: column wrap;
      justify-content: center;
      align-items: center;
    }
  }
</style>
